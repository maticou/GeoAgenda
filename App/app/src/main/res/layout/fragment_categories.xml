<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.categories.CategoriesFragment"
    android:background="#D5D3D3">

    <View
        android:id="@+id/divider2"
        android:layout_width="20dp"
        android:layout_height="729dp"
        android:background="#D5D3D3"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="170dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/category_img1"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:contentDescription="@string/cat1_img_description"
                android:src="@drawable/android" />

            <TextView
                android:id="@+id/category_text1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/cat1_text_description"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="170dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider2"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/category_img2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:contentDescription="@string/cat1_img_description"
                android:src="@drawable/android" />

            <TextView
                android:id="@+id/category_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat2_text_description"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/category_img3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:contentDescription="@string/cat1_img_description"
                android:src="@drawable/android" />

            <TextView
                android:id="@+id/category_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat3_text_description"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>