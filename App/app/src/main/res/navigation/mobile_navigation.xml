        android:id="@+id/nav_settings"
        android:name="com.example.geoagenda.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings"/>

    <fragment
        android:id="@+id/nav_groups"
        android:name="com.example.geoagenda.ui.mygroups.MygroupsFragment"
        android:label="@string/menu_groups_saved"
        tools:layout="@layout/fragment_mygroups"/>

    <fragment
        android:id="@+id/nav_groups_new"
        android:name="com.example.geoagenda.ui.addgroup.AddGroupFragment"
        android:label="@string/menu_groups_new"
        tools:layout="@layout/fragment_addgroup"/>
    <fragment
        android:id="@+id/nav_groups_edit"
