<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_rec">

    <fragment
        android:id="@+id/nav_rec"
        android:name="com.example.geoagenda.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

    </fragment>

    <fragment
        android:id="@+id/nav_categories"
        android:name="com.example.geoagenda.ui.categories.CategoriesFragment"
        android:label="@string/menu_categories"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/nav_locations_new"
        android:name="com.example.geoagenda.ui.addlocation.AddLocationFragment"
        android:label="@string/menu_locations_new"
        tools:layout="@layout/fragment_locations" />

    <fragment
        android:id="@+id/nav_locations_saved"
        android:name="com.example.geoagenda.ui.locations.LocationsFragment"
